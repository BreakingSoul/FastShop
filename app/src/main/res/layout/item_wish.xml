<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/wishItemCard"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="6dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wishItemImage"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@mipmap/ic_launcher"
                android:padding="10dp"
                android:contentDescription="@string/picture_desc">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/wishItemName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:padding="3dp"
                        android:text="Item name"
                        android:textSize="17sp"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:layout_toLeftOf="@+id/wishItemRemove"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true">
                    </TextView>

                    <Button
                        android:id="@+id/wishItemRemove"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="X"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorButtonRemoveBorder"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/button_style_remove"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_alignParentRight="true">

                    </Button>

                </RelativeLayout>

                    <RatingBar
                        android:id="@+id/wishItemRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:layout_marginEnd="10dp"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:minHeight="10dp"
                        android:numStars="5"
                        android:stepSize="0.1"/>

                    <TextView
                        android:id="@+id/wishItemReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:text="(...)"
                        android:textSize="16sp"
                        android:textColor="@color/colorReviewAmount">
                    </TextView>

                <TextView
                    android:id="@+id/wishItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="â‚¬ ..."
                    android:textColor="@color/colorToolbar"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>